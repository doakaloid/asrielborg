<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>AsrielBorg Panel</title>

    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
    <!-- JQuery UI CSS -->
    <link href="/css/jquery-ui.min.css" rel="stylesheet">
    <link href="/css/jquery-ui.structure.min.css" rel="stylesheet">

    <link rel="stylesheet" href="/css/panel.css">

    <!-- Socket.io -->
    <script type="text/javascript" src='/scripts/socket.io-1.4.5.js'></script>

    <title>AsrielBorg Control Panel</title>

    <!-- Read cookie script -->
    <script type="text/javascript">
        function readCookie(name) {
            var nameEQ = name + "=";
            var ca = document.cookie.split(';');
            for (var i = 0; i < ca.length; i++) {
                var c = ca[i];
                while (c.charAt(0) == ' ') c = c.substring(1, c.length);
                if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length, c.length);
            }
            return null;
        }
    </script>
</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <a class="navbar-brand" href="#">AsrielBorg Web Panel</a>
    </div>
</nav>

<div class="container-fluid">
    <div class="row">
        <!-- Users -->
        <div class="col-md-3">
            <div class="page-header">
                <h2>Users</h2>
                <div class="panel panel-primary">
                    <div class="panel-heading"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Users
                    </div>
                    <div class="table-scroll">
                        <table class="table table-striped table-bordered asriel-table">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>IP Address</th>
                                </tr>
                            </thead>
                            <tbody id="user-table">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div><!-- /Users -->

        <div class="col-md-7">
            <div class="page-header">
                <h2>Controls</h2>
            </div>
            <div class="row">

                <div class="col-md-6">
                    <span class="label label-primary">Reply rate: <span id="replyRate-value"></span></span>

                    <div class="spacing"></div>

                    <div id="replyRate-slider" class="slider asriel-slider"></div>

                    <div class="spacing"></div>

                    <span class="label label-primary">Reply nick: <span id="replyNick-value"></span></span>
                    <div class="spacing"></div>
                    <div id="replyNick-slider" class="slider asriel-slider"></div>

                    <div class="spacing"></div>

                    <span class="label label-primary">Reply magic: <span id="replyMagic-value"></span></span>
                    <div class="spacing"></div>
                    <div id="replyMagic-slider" class="slider asriel-slider"></div>
                </div>

                <div class="col-md-6">
                    <div class="spacing"></div>

                    <div class="panel panel-primary">
                        <div class="panel-heading"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                            Extra Options
                        </div>

                        <div class="panel-body">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" value="" id="learning-check"> Learning
                                    <label for="learning-check" id="learning-label"></label>
                                </label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" value="" id="speaking-check"> Speaking
                                    <label for="speaking-check" id="speaking-label"></label>
                                </label>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="spacing"></div>

            <div class="row">
                <div class="col-md-6">
                    <!-- Magic words box -->
                    <div class="panel panel-primary">
                        <div class="panel-heading" style="overflow: hidden;">
                            <span class="glyphicon glyphicon-tags" aria-hidden="true"></span>
                            <span>Â Magic Words</span>
                            <div class="btn-group btn-group-xs pull-right">
                                <button type="button" class="btn btn-default" data-toggle="modal"
                                        data-target="#magic-word-modal"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> New</button>
                            </div>
                        </div>
                        <div class="table-scroll">
                            <table class="table table-striped table-bordered asriel-table">
                                <tbody id="magic-words-table">
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- Blacklist words box -->
                    <div class="panel panel-primary">
                        <div class="panel-heading" style="overflow: hidden; white-space: nowrap;">
                            <span class="glyphicon glyphicon-tags" aria-hidden="true"></span>
                            <span>Blacklisted Words</span>
                            <div class="btn-group btn-group-xs pull-right">
                                <button type="button" class="btn btn-default" data-toggle="modal"
                                        data-target="#blacklist-word-modal"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> New</button>
                            </div>
                        </div>
                        <div class="table-scroll">
                            <table class="table table-striped table-bordered asriel-table">
                                <tbody id="magic-words-table">
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
                <div class="col-md-8">
                    <!-- Discord chatbox will go here -->
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Magic Word Modal -->
<div class="modal fade" id="magic-word-modal" tabindex="-1" role="dialog" aria-labelledby="magic-word-modal-label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" aria-label="Close" data-dismiss="modal"><span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="magic-word-modal-label">What is the magic word you would like to add?</h4>
            </div>
            <div class="modal-body">
                <div class="warning alert alert-danger" id="magic-word-input-error" style="display: none"></div>
                <div class="input-group input-group-lg">
                    <input type="text" class="form-control" placeholder="Enter a word" id="magic-word-input">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary"
                        onClick="submitData('magicWordsAdd', $('#magic-word-input').val())">Submit
                </button>
            </div>
        </div>
    </div>
</div>

<!-- JQuery -->
<script type='text/javascript' src="/scripts/jquery-3.1.0.min.js"></script>
<script type='text/javascript' src="/scripts/jquery-ui.min.js"></script>

<script type="text/javascript" src="/scripts/panel-socketio.js"></script>
<script type="text/javascript" src="/scripts/panel-actions.js"></script>
<!-- Bootstrap -->
<script type="text/javascript" src="/scripts/bootstrap.min.js"></script>

</body>
</html>