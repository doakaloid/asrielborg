    <title>AsrielBorg Panel</title>

    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
    <!-- JQuery UI CSS -->
    <link href="/css/jquery-ui.min.css" rel="stylesheet">
    <link href="/css/jquery-ui.structure.min.css" rel="stylesheet">

    <style>
        body {
            padding-top: 30px;
        }

        .spacing {
            padding-bottom: 10px;
        }

        .asriel-table {
            table-layout: fixed;
        }

        .asriel-table > * {
            overflow: hidden;
            overflow-x: scroll;
        }
    </style>

    <!-- Socket.io -->
    <script type="text/javascript" src='/scripts/socket.io-1.4.5.js'></script>

    <title>AsrielBorg Control Panel</title>

    <!-- Read cookie script -->
    <script type="text/javascript">
        function readCookie(name) {
            var nameEQ = name + "=";
            var ca = document.cookie.split(';');
            for (var i = 0; i < ca.length; i++) {
                var c = ca[i];
                while (c.charAt(0) == ' ') c = c.substring(1, c.length);
                if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length, c.length);
            }
            return null;
        }
    </script>
</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <a class="navbar-brand" href="#">AsrielBorg Web Panel</a>
    </div>
</nav>

<div class="container-fluid">
    <div class="row">
        <!-- Users -->
        <div class="col-md-3">
            <div class="page-header">
                <h2>Users</h2>
                <div class="panel panel-primary">
                    <!-- Default panel contents -->
                    <div class="panel-heading"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Users
                    </div>

                    <!-- Table -->
                    <table class="table table-striped table-bordered asriel-table">
                        <thead>
                        <tr>
