<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>AsrielBorg Panel</title>

    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
    <!-- JQuery UI CSS -->
    <link href="/css/jquery-ui.min.css" rel="stylesheet">
    <link href="/css/jquery-ui.structure.min.css" rel="stylesheet">

    <style>
        body {
            padding-top: 30px;
        }
        .spacing {
            padding-bottom: 10px;
        }
        .asriel-table {
            table-layout: fixed;
        }
        .asriel-table > * {
            overflow: hidden;
            overflow-x: scroll;
        }
    </style>

    <!-- Socket.io -->
    <script type="text/javascript" src='/scripts/socket.io-1.4.5.js'></script>  

    <title>AsrielBorg Control Panel</title>
    
    <!-- Read cookie script -->
    <script type="text/javascript">
        function readCookie(name) {
            var nameEQ = name + "=";
            var ca = document.cookie.split(';');
            for(var i=0;i < ca.length;i++) {
                var c = ca[i];
                while (c.charAt(0)==' ') c = c.substring(1,c.length);
                if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length,c.length);
            }
            return null;
        }
    </script>
</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">AsrielBorg Web Panel</a>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Users -->
            <div class="col-md-3">
                <div class="page-header">
                    <h2>Users</h2>
                    <div class="panel panel-primary">
                      <!-- Default panel contents -->
                      <div class="panel-heading">Users</div>

                      <!-- Table -->
                      <table class="table table-striped table-bordered asriel-table">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>IP Address</th>
                                </tr>
                            </thead>
                            <tbody id="user-table">
                            </tbody>
                      </table>
                    </div>
                </div>
            </div><!-- /Users -->

            <div class="col-md-7">
                <div class="page-header">
                    <h2>Controls</h2>
                </div>
                <div class="row">
                    
                    <div class="col-md-6">
                        <span class="label label-primary">Reply rate: <span id="replyrate-value"></span></span>
                        <div class="spacing"></div>
                        <div id="replyrate-slider" class="slider asriel-slider"></div>
                        
                        <div class="spacing"></div>
                        <span class="label label-primary">Reply nick: <span id="replynick-value"></span></span>
                        <div class="spacing"></div>
                        <div id="replynick-slider" class="asriel-slider"></div>
                        
                        <div class="spacing"></div>
                        <span class="label label-primary">Reply magic: <span id="replymagic-value"></span></span>
                        <div class="spacing"></div>
                        <div id="replymagic-slider" class="asriel-slider"></div>
                    </div>
                    
                    <div class="col-md-6">
                        
                        <div class="spacing"></div>
                        
                        <div class="panel panel-primary">
                            <div class="panel-heading">Extra Options</div>
                            
                            <div class="panel-body">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" value="" id="learning-check"> Learning
                                            <label for="learning-check" id="learning-label"></label>
                                        </label>
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" value="" id="speaking-check"> Speaking
                                            <label for="speaking-check" id="speaking-label"></label>
                                        </label>
                                    </div>
                            </div>  
                            
                        </div>
                    </div>
                </div>
                
                <div class="spacing"></div>
                
                <div class="row">
                    <div class="col-md-4">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                Magic Words
                                <div class="btn-group btn-group-xs pull-right">
                                    <button align="right" type="button" class="btn btn-default" data-toggle="modal" data-target="#magic-word-modal"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>New</button>
                                </div>
                            </div>
                            <table class="table table-striped table-bordered asriel-table">
                                <tbody id="magic-words-table">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-8">
                </div>
            </div>
        </div>
    </div>

    <!-- Magic Word Modal -->

    <div class="modal fade" id="magic-word-modal" tabindex="-1" role="dialog" aria-labelledby="magic-word-modal-label">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="magic-word-modal-label">What is the word you would like to add?</h4>
          </div>
          <div class="modal-body">
            <div class="input-group input-group-lg">
                <input type="text" class="form-control" placeholder="Enter a word" id="magic-word-input">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" data-dismiss="modal" onClick="submit_magic()">Submit</button>
          </div>
        </div>
      </div>
    </div>

    <!-- JQuery -->
    <script type='text/javascript' src="/scripts/jquery-3.1.0.min.js"></script>
    <script type='text/javascript' src="/scripts/jquery-ui.min.js"></script>

    <script type="text/javascript">
        "use strict";

        $("#magic-word-input").keypress( function(e) {
            if (e.which == 13) {
                submit_magic();
            }
        });
 

        function submit_magic() {
            let magic_word = $("#magic-word-input").val().trim();
            $("#magic-word-input").val("");

            socket.emit("submit_magic_word", {magic_word: magic_word});
            $("#magic-word-modal").modal("hide");
        }

    </script>
    
    <script type="text/javascript">
        "use strict";
        let token = readCookie('token');
        
        //If there is no token, you must go back to the main page
        //to login again and get a new one.
        if (typeof token === 'null') {
            window.location.href = '/';
        }
        else {
            var socket = io.connect('', {
                query: 'token=' + token
            });

            socket.on('connect', function () {
                console.log("Connected to the server.");
            });

            socket.on('bot_config', function (data) {
                console.log("Received data: " + JSON.stringify(data));
                if (data.replyrate) {
                    $("#replyrate-value").text(data.replyrate);
                    $("#replyrate-slider").slider({
                        range: "min",
                        min: 0,
                        max: 100,
                        value: data.replyrate,
                    });
                }
                if (data.replynick) {
                    $("#replynick-value").text(data.replynick);
                    $("#replynick-slider").slider({
                        range: "min",
                        min: 0,
                        max: 100,
                        value: data.replynick,
                    });
                }
                if (data.replymagic) {
                    $("#replymagic-value").text(data.replymagic);
                    $("#replymagic-slider").slider({
                        range: "min",
                        min: 0,
                        max: 100,
                        value: data.replymagic,
                    });
                }
                if (typeof data.learning === 'boolean') {
                    $("#learning-check").prop("checked", true);
                    if (data.learning) {
                        $("#learning-label").html("<span class='label label-success'>ON</span>");
                    } else {
                        $("#learning-label").html("<span class='label label-danger'>OFF</span>");
                    }
                }
                if (typeof data.speaking === 'boolean') {
                    $("#speaking-check").prop("checked", true);
                    if (data.speaking) {
                        $("#speaking-label").html("<span class='label label-success'>ON</span>");
                    } else {
                        $("#speaking-label").html("<span class='label label-danger'>OFF</span>");
                    }
                }
                if (data.magic_words) {
                    $("#magic-words-table").html("");
                    data.magic_words.forEach( function (word) {
                        $("#magic-words-table").append(`<tr><td>${word}</td></tr>`);
                    });
                }
            });

            socket.on('update_token', function (data) {
                token = data.token;

                let date = new Date();
                date.setTime(date.getTime() + (12 * 60 * 60 * 1000));
                
                document.cookie = `token=${token}; expires=${date.toGMTString()}; path=/`
            });
            
            socket.on('error', function (data) {
                if (data.message) {
                    alert("Connection closed. " + data.message);
                } else {
                    alert("Connection closed. Reason unknown.");
                }
                
                document.cookie = 'token=;Path=/;expires Thu, 01 Jan 1970 00:00:01 GMT;'
                window.location.href = '/';
            });

            socket.on('invalid_token', function (data) {
                if (data.message) {
                    alert("Connection closed. " + data.message);
                } else {
                    alert("Connection closed. Reason unknown.");
                }
                
                document.cookie = 'token=;Path=/;expires Thu, 01 Jan 1970 00:00:01 GMT;'
                window.location.href = '/';
            })
            
            socket.on('connect_timeout', function() {
               alert('The connection has timed out.'); 
            });

            socket.on('user_list', function(data) {
                let online_users = data;
                $("#user-table").html(""); // Empty the user list to receive a new one.
                online_users.forEach(function (user) {
                    $("#user-table").append(`<tr><td>${user.nickname}</td><td>${user.ip_address}</td></tr>`);
                });
            });
        }
    </script>

    <!-- Bootstrap -->
    <script type="text/javascript" src="/scripts/bootstrap.min.js"></script>
</body>
</html>